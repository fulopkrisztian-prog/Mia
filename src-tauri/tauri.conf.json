{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mia",
  "version": "0.1.0",
  "identifier": "com.mia.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
    {
      "label": "main",
      "title": "Mia Dashboard",
      "width": 900,
      "height": 700,
      "visible": false,      
      "transparent": true,
      "decorations": false,   
      "center": true
    },
    {
      "label": "floater",
      "url": "/floater",     
      "width": 120,
      "height": 120,
      "visible": true,       
      "transparent": true,
      "decorations": false,
      "alwaysOnTop": true,   
      "skipTaskbar": true,
      "shadow": false,
      "center": false,
      "resizable": false
    }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
